.markdown-toolbar-panel {
  height: 20px;
  border: 1px solid #aaa;
  background: #fafafa;
  margin-bottom:0;
  border-bottom:0;
  overflow: hidden;
}
.markdown-upload-panel {
  margin-top:0;
  border-top:0;
  padding:5px;
}

.mdt_buttons {
  width:auto;
  display:inline-block;
  margin-top:2px;
  margin-bottom:2px;  
  height: 20px;
  overflow: hidden;
}

.mdt_button {
  width:16px;
  height:16px;
  cursor:pointer;
  display:inline-block;
  float:left;
  margin-left:2px;
}

<% %w{ delimiter code blockquote bold italic strike list_bullets list_numbers heading_1 heading_2 heading_3 link image}.each_with_index do |button, index| %>
.mdt_button_<%= button %> {
  background: url( <%= asset_path "text_#{button}.png" %>);
}
.mdt_button_<%= button %>:active{
    background-position: 1px 1px;
}
<% end %>